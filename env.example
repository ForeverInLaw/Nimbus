# Docker Compose Environment Variables
# Copy this file to .env and modify as needed

# Image registry and prefix
REGISTRY=ghcr.io
IMAGE_PREFIX=rxflex/nimbus
TAG=latest

# Database configuration
MONGO_ROOT_USERNAME=admin
MONGO_ROOT_PASSWORD=pass
MONGO_DATABASE=nimbus

# Director configuration
DIRECTOR_PORT=3000
JWT_SECRET=your_jwt_secret_here

# Admin Panel configuration
ADMIN_PANEL_PORT=5173
API_URL=http://localhost:3000

# Agent configuration (for systemd installation)
# AGENT_API_KEY=your_api_key_here
# AGENT_NAME=test-agent
# DIRECTOR_URL=http://your-director-url:3000
